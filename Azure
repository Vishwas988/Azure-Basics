    function createMarketShareChart() {
        const ctx = document.getElementById('marketShareChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: appData.marketData.share.labels,
                datasets: [{
                    label: 'Market Share %',
                    data: appData.marketData.share.data,
                    backgroundColor: ['#3b82f6', '#0078D4', '#60a5fa'],
                    borderColor: ['#2563eb', '#005a9e', '#3b82f6'],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                indexAxis: 'y',
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            label: function(context) { return `${context.dataset.label}: ${context.raw}%`; }
                        }
                    }
                },
                scales: {
                    x: {
                        beginAtZero: true,
                        title: { display: true, text: '%' }
                    }
                }
            }
        });
    }

    function createGrowthRateChart() {
        const ctx = document.getElementById('growthRateChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: appData.marketData.growth.labels,
                datasets: [{
                    label: 'Y-o-Y Growth %',
                    data: appData.marketData.growth.data,
                    backgroundColor: ['#0078D4', '#3b82f6'],
                    borderColor: ['#005a9e', '#2563eb'],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            label: function(context) { return `${context.dataset.label}: ${context.raw}%`; }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: '%' }
                    }
                }
            }
        });
    }
    
    function populateComparisonTable() {
        const tableBody = document.getElementById('comparisonTableBody');
        tableBody.innerHTML = appData.marketData.comparison.map(row => `
            <tr class="bg-white border-b">
                <th scope="row" class="px-6 py-4 font-medium text-slate-900 whitespace-nowrap">${row.feature}</th>
                <td class="px-6 py-4">${row.azure}</td>
                <td class="px-6 py-4">${row.aws}</td>
                <td class="px-6 py-4">${row.gcp}</td>
            </tr>
        `).join('');
    }

    const serviceContent = document.getElementById('service-content');
    const tabButtons = document.querySelectorAll('.tab-button');
    
    function displayServices(category) {
        serviceContent.innerHTML = '';
        const services = appData.services[category];
        if (!services) return;

        services.forEach(service => {
            const card = document.createElement('div');
            card.className = 'bg-white p-6 rounded-xl shadow-md card-zoom flex flex-col';
            card.innerHTML = `
                <div class="flex-grow">
                    <h4 class="text-lg font-semibold text-slate-800">${service.name}</h4>
                    <p class="mt-2 text-sm text-slate-500">${service.desc}</p>
                </div>
                ${service.keystone ? `
                <div class="mt-4">
                    <button data-modal-id="${service.id}" class="modal-trigger text-sm font-semibold text-blue-600 hover:text-blue-800">
                        Keystone Technology &rarr;
                    </button>
                </div>` : ''}
            `;
            serviceContent.appendChild(card);
        });
    }

    tabButtons.forEach(button => {
        button.addEventListener('click', () => {
            tabButtons.forEach(btn => btn.classList.remove('active'));
            button.classList.add('active');
            displayServices(button.dataset.tab);
        });
    });

    const industryCardsContainer = document.getElementById('industry-cards');
    const industryButtons = document.querySelectorAll('.industry-button');

    function displayIndustryCards(filter) {
        industryCardsContainer.innerHTML = '';
        const filteredSolutions = filter === 'all' 
            ? appData.industrySolutions 
            : appData.industrySolutions.filter(s => s.industry === filter);

        filteredSolutions.forEach(solution => {
            const card = document.createElement('div');
            card.className = 'bg-white p-6 rounded-xl shadow-md card-zoom flex flex-col';
            card.innerHTML = `
                <div class="flex-grow">
                    <span class="text-xs font-semibold uppercase tracking-wider text-blue-500">${solution.industry}</span>
                    <h4 class="text-lg font-semibold text-slate-800 mt-1">${solution.title}</h4>
                    <p class="mt-2 text-sm text-slate-500"><strong class="text-slate-600">${solution.company}:</strong> ${solution.desc}</p>
                </div>
                <div class="mt-4 pt-4 border-t border-slate-100">
                    <p class="text-xs text-slate-400">Key Services: ${solution.services.join(', ')}</p>
                </div>
            `;
            industryCardsContainer.appendChild(card);
        });
    }

    industryButtons.forEach(button => {
        button.addEventListener('click', () => {
            industryButtons.forEach(btn => btn.classList.replace('bg-blue-500','bg-white') || btn.classList.replace('text-white','text-black'));
            button.classList.replace('bg-white','bg-blue-500');
            button.classList.replace('text-black','text-white');
            displayIndustryCards(button.dataset.industry);
        });
    });

    const modal = document.getElementById('modal');
    const modalContent = document.getElementById('modal-content');
    const modalTitle = document.getElementById('modal-title');
    const modalBody = document.getElementById('modal-body');
    const modalClose = document.getElementById('modal-close');

    function openModal(id) {
        const details = appData.keystoneDetails[id];
        if (!details) return;
        
        modalTitle.textContent = details.title;
        modalBody.innerHTML = details.content;
        
        modal.classList.remove('hidden');
        setTimeout(() => {
            modal.classList.remove('opacity-0');
            modalContent.classList.remove('scale-95');
        }, 10);
    }

    function closeModal() {
        modal.classList.add('opacity-0');
        modalContent.classList.add('scale-95');
        setTimeout(() => {
            modal.classList.add('hidden');
        }, 300);
    }

    document.body.addEventListener('click', (e) => {
        const trigger = e.target.closest('.modal-trigger');
        if (trigger) {
            openModal(trigger.dataset.modalId);
        }
    });

    modalClose.addEventListener('click', closeModal);
    modal.addEventListener('click', (e) => {
        if (e.target === modal) {
            closeModal();
        }
    });

    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
    });

    const navLinks = document.querySelectorAll('.nav-link');
    const sections = document.querySelectorAll('main section');

    window.addEventListener('scroll', () => {
        let current = '';
        sections.forEach(section => {
            const sectionTop = section.offsetTop;
            if (pageYOffset >= sectionTop - 80) {
                current = section.getAttribute('id');
            }
        });

        navLinks.forEach(link => {
            link.classList.remove('active');
            if (link.getAttribute('href').includes(current)) {
                link.classList.add('active');
            }
        });
    });
    
    createMarketShareChart();
    createGrowthRateChart();
    populateComparisonTable();
    tabButtons[0].click();
    industryButtons[0].click();
});
</script>

</body>
</html>
